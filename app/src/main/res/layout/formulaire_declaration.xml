<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de l'incident"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/formDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/calendarImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/calendar_add" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de résolution souhaitée"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/formDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/calendarImage2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/calendar_add"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="1dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/formType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Importance"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/formImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/formContactName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/formContact"/>

            <!--<ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"/>
            -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter un contact"
                android:onClick="pickContact"
                android:id="@+id/buttonPickContact"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter une photo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Titre"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/formTitre"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/formDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:lines="20"
            android:minLines="1"
            android:scrollbars="vertical" />


    </LinearLayout>


</ScrollView>